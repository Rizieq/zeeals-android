<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:id="@+id/list_item_group_icon"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        android:layout_weight="0.1"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/profileDesc_Gray"
        android:fontFamily="@font/fontawesomewebfont"
        android:text="\uf039"/>

    <TextView
        android:background="@android:color/transparent"
        android:text="Group"
        android:textColor="@color/profileName_Gray"
        android:fontFamily="@font/poppinsbold"
        android:textSize="15dp"
        android:gravity="center|left"
        android:id="@+id/list_item_group_name"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <ImageView
        android:id="@+id/list_item_group_arrow"
        android:layout_width="13dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical|end"
        android:layout_weight="0.1"
        android:paddingVertical="18dp"
        android:src="@drawable/ic_arrow_down_navigate" />

</LinearLayout>