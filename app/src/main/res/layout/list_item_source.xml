<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_source_height">

    <TextView
        android:id="@+id/list_item_source_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/list_item_left_margin"
        android:layout_marginTop="5dp"
        android:gravity="clip_vertical"
        android:textStyle="bold"
        tools:text="Source Name" />

    <TextView
        android:id="@+id/list_item_source_link"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/list_item_left_margin"
        android:gravity="center_vertical"
        tools:text="http://instagram.com/eldirohmanur" />

</FrameLayout>
